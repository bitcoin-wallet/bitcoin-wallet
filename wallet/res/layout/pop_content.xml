<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/bg_form"
            android:fillViewport="true"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/pop_transaction_information"/>-->

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pop_verify_transaction_to_prove"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pop_transaction_date"/>
            <TextView
                    android:id="@+id/pop_transaction_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pop_transaction_amount"/>

            <de.schildbach.wallet.ui.CurrencyTextView
                    android:id="@+id/pop_transaction_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pop_transaction_memo"/>
            <TextView
                    android:id="@+id/pop_transaction_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pop_destination"/>
            <TextView
                    android:id="@+id/pop_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <Space
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:id="@+id/send_coins_private_key_password_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_field"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                <EditText
                        android:id="@+id/send_coins_private_key_password"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/private_key_password"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="numberPassword"
                        android:singleLine="true"/>

                <TextView
                        android:id="@+id/send_coins_private_key_bad_password"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/private_key_bad_password"
                        android:textColor="@color/fg_error"
                        android:textStyle="bold"
                        android:visibility="invisible"/>
            </LinearLayout>
        <include layout="@layout/send_coins_buttons_include" />
    </LinearLayout>
</ScrollView>